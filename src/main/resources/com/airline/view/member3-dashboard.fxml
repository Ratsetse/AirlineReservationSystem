<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="mainContainer" spacing="20" style="-fx-padding: 20; -fx-background-color: linear-gradient(to bottom, #2ecc71 0%, #27ae60 100%);" xmlns="http://javafx.com/javafx/20.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.airline.Controller.Member3Controller">

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="20">
        <VBox spacing="5">
            <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white;" text="ðŸŽ« MEMBER 3 - RESERVATIONS" />
            <Label style="-fx-font-size: 14px; -fx-text-fill: #ecf0f1;" text="Reservation System Analyst | Complete Booking Management" />
        </VBox>
        <Region HBox.hgrow="ALWAYS" />
        <Button onAction="#goBackToMain" style="-fx-background-color: white; -fx-text-fill: #2ecc71; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 10 20;" text="â† Back to Main" />
    </HBox>

    <!-- Reservation Statistics -->
    <HBox alignment="CENTER" spacing="20">
        <VBox alignment="CENTER" prefWidth="200" spacing="10" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 20;">
            <Label style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;" text="Today's Bookings" />
            <Label fx:id="todayBookingsLabel" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2ecc71;" text="0" />
        </VBox>

        <VBox alignment="CENTER" prefWidth="200" spacing="10" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 20;">
            <Label style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;" text="Confirmed" />
            <Label fx:id="confirmedLabel" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #3498db;" text="0" />
        </VBox>

        <VBox alignment="CENTER" prefWidth="200" spacing="10" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 20;">
            <Label style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;" text="Waiting List" />
            <Label fx:id="waitingLabel" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #e74c3c;" text="0" />
        </VBox>

        <VBox alignment="CENTER" prefWidth="200" spacing="10" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 20;">
            <Label style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;" text="Today's Revenue" />
            <Label fx:id="revenueLabel" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #f39c12;" text="M 0">
            <font>
               <Font size="25.0" />
            </font></Label>
        </VBox>
    </HBox>

    <!-- Search and Actions -->
    <HBox alignment="CENTER_LEFT" spacing="15">
        <Label style="-fx-font-weight: bold; -fx-text-fill: white;" text="Search:" />
        <TextField fx:id="searchField" prefWidth="250" promptText="Search by reservation ID, flight, or customer" />
        <Button onAction="#handleSearch" style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-weight: bold;" text="ðŸ” Search" />
        <Button onAction="#handleNewReservation" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;" text="âž• New Reservation" />
        <Button onAction="#handleConfirmReservation" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold;" text="âœ… Confirm" />
        <Button onAction="#handleCancelReservation" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;" text="âŒ Cancel" />
        <Button onAction="#handleBookingAnalytics" style="-fx-background-color: #8e44ad; -fx-text-fill: white; -fx-font-weight: bold;" text="ðŸ“Š Analytics" />
        <Button onAction="#handleRefresh" style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold;" text="ðŸ”„ Refresh" />
    </HBox>

    <!-- Reservation Table -->
    <VBox spacing="10">
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;" text="Reservation Management" />
        <TableView fx:id="reservationTable" prefHeight="300">
            <columns>
                <TableColumn fx:id="colReservationId" prefWidth="60" text="ID" />
                <TableColumn fx:id="colFlightCode" prefWidth="80" text="Flight" />
                <TableColumn fx:id="colCustomerCode" prefWidth="80" text="Cust Code" />
                <TableColumn fx:id="colSeatClass" prefWidth="70" text="Class" />
                <TableColumn fx:id="colStatus" prefWidth="90" text="Status" />
            </columns>
        </TableView>
    </VBox>

</VBox>
